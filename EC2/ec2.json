{
    "Resources": {
        "CreateInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
				"AvailabilityZone" : "ap-south-1a",
				"ImageId" : "ami-04893cdb768d0f9ee",
				"InstanceType" : "t2.micro",
				"KeyName" : "vishesh"
			}
        },
		"CreateVolume": {
			"Type": "AWS::EC2::Volume",
			"Properties": {
				"AvailabilityZone" : "ap-south-1a",
				"Encrypted" : false,
				"Size" : 1,
				"VolumeType" : "gp2"
			}
		},
		"AttachVolume": {
			"Type" : "AWS::EC2::VolumeAttachment",
			"DependsOn" : [ 
				"CreateInstance",
				"CreateVolume"
			],
			"Properties" : {
			  "Device" : "/dev/sdh",
			  "InstanceId" : { "Ref" : "CreateInstance" },
			  "VolumeId" : { "Ref" : "CreateVolume" }
			}
		}
	}
}